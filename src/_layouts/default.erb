<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: resource.data.title %>
  </head>
  <body class="<%= resource.data.layout %> <%= resource.data.page_class %>">
    <header class="header">
      <a href="/"><img src="<%= image_path "images/logo.svg" %>" alt="Logo"></a>

      <nav class="main-navigation">
        <ul>
          <li><%= link_to_active "Home", "/" %></li>
          <li><%= link_to_active "Sponsorships", "/sponsorships/" %></li>
          <li><%= link_to_active "About", "/about/" %></li>
        </ul>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
